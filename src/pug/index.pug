doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		)
		title=app_name
		link(
			rel="stylesheet"
			href="main.css"
		)
	body
		form#search
			input(
				type='text'
				maxlength='2048'
				id='q'
				autocomplete='off'
				class='enable-select'
			)
			a#submit.button 検索
			fieldset#option
				legend 検索オプション
				#lang-label
					label(for="f") 翻訳元言語
					label(for="t") 翻訳先言語
				#lang-select
					span
						select(id='f')
							option(value='auto') 自動検出
					span
						select(id='t')
							option(value="none") 翻訳しない

				fieldset#target
					legend 検索対象
					- var target = ['Google画像検索', 'Pinterest', 'Tumblr']
					each item in target
						label
							input.checkbox(
								type='checkbox'
								name='shows'
								id=item
							)
							span=item
			a#closeResultWindows.button 検索結果を全て閉じる
			script require('./renderer.js')
